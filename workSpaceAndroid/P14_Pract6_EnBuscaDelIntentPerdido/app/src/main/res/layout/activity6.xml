<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6"
    android:padding="28dp">

    <Button
        android:id="@+id/btnSeeInt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectagle_rounded_buttom"
        android:text="@string/felicidades_has_encontrado_el_intent_solo_tienes_que_hacer_click_para_a_verlo"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnExitGame"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@drawable/rectagle_rounded_buttom"
        android:text="@string/salir_del_juego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>